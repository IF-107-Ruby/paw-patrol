.page-title
  h2 = @company.name
.page-content
  .row class='justify-content-between'
    .col
      h4 About company:
      p = @company.description
      .contact-info
        h4 Contact information:
        div 
          strong Email:
          span
            = @company.email
        div
          strong Phone number:
          span
            = @company.phone
        .mt-2
          div = link_to 'Company members', users_path
          div = link_to 'Company units', units_path, data: { turbolinks: false }
    .col class='edit-delete-links justify-content-end'
      div = link_to icon('fas', 'edit', class: 'strong'), [:edit, @company], class: 'edit-link'
      div = link_to icon('fas', 'trash-alt', class: 'strong'), @company, method: :delete, data: { confirm: "You sure?" }, class: 'delete-link'
= provide(:headline, "View copmany member")

.dashboard-box
  .content.with-padding.content.padding-bottom-0
    .row.margin-bottom-60.justify-content-between
      .col-auto
        .row.align-items-start
          .col-auto
            .avatar-wrapper
              = image_tag "user-avatar-placeholder.png", class: "profile-pic"
          .col-auto
            .company-details
              h3.margin-bottom-0
                = @user.full_name
                span
                  = @user.display_role
              ul
                li
                  = mail_to @user.email
                    i.icon-material-outline-email
                    = @user.email
      - if current_user.company_owner? && current_user != @user
        .col-auto.icon-links.align-self-start
          = link_to edit_company_member_path(@user)
            i.icon-feather-edit
          = link_to company_member_path(@user), method: :delete, data: { confirm: 'Are you sure?' }, class: "ml-2"
            i.icon-feather-trash-2
$.magnificPopup.open({
  items: {
      src: '<%= j render "show" %>',
  },
  removalDelay: 300,
  mainClass: 'my-mfp-zoom-in',
  zoom: {
    enabled: true,
    duration: 300,
    easing: 'ease-in-out',
  },
  callbacks: {
    open: function() {
      let start = moment("<%= @event.anchor %>");
      let end = moment("<%= @event.anchor + @event.duration.minutes %>");

      $('#daterangepicker').daterangepicker(
        {
          timePicker: true,
          startDate: start,
          endDate: end,
          opens: "left",
          locale: {
            format: "MM/DD/YYYY HH:mm",
          },
        },
        function (start, end, label) {
          $("#event_anchor").val(start.format("YYYY-MM-DD HH:mm"));
          $("#event_duration").val(end.diff(start, 'minutes'));
        }
      );

      $("#daterangepicker").val(
        start.format("MM/DD/YYYY HH:mm") +
          " - " +
        end.format("MM/DD/YYYY HH:mm")
      );
    },
    afterClose: function() {
      $(".daterangepicker").remove();
      pickr.destroyAndRemove();
    },
  }
});

$(document).ready(function() {
  registerPopupTubs();
  $('#event_ticket_id').selectpicker();
  $('#event_frequency').selectpicker();
  pickrInit();
})

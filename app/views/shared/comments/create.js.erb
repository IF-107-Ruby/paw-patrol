$('#new-comment-form').html('<%= escape_javascript(render('shared/comments/form', commentable: @commentable, submit_label: 'Send', parent_id: nil, js_form_class: 'js-new-comment', js_form_id: 'new-comment')) %>');
$('#comments-list').html('<%= escape_javascript(render('shared/comments/nested_comment', commentable: @commentable, comments: @commentable.comments.arrange )) %>');


<% if @comment.parent_id %>
  <% if @comment.save %>  
    $("#reply-comment-<%= @comment.parent_id %>").find("#new-comment").find('#comment-status').addClass("success");
    $("#reply-comment-<%= @comment.parent_id %>").find("#new-comment").find('#comment-status').html("Comment has been saved").delay(1000).fadeIn('slow').delay(2000).fadeOut('slow');
  <% end %>
<% else %>
   <% if @comment.save %>
    $("#new-comment").find('#comment-status').addClass("success");
    $("#new-comment").find('#comment-status').html("Comment has been saved").delay(1000).fadeIn('slow').delay(2000).fadeOut('slow');
  <% else %>
    $("#new-comment").find('#comment-status').addClass("warning");
    $("#new-comment").find('#comment-status').html("Comment failed to save, please try again").delay(1000).fadeIn('slow').delay(2000).fadeOut('slow');
  <% end %>
<% end %>
